{
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "start": "yarn shell",
    "build": "tsc",
    "dev": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "deploy": "yarn build && firebase deploy --only functions",
    "lint": "yarn prettier && yarn eslint",
    "lint:fix": "yarn prettier:fix && yarn eslint:fix",
    "eslint": "eslint --ignore-path .gitignore '**/*.{ts,js}'",
    "eslint:fix": "yarn eslint --fix",
    "prettier": "prettier --check --ignore-path .gitignore '**/*.json'",
    "prettier:fix": "yarn prettier --write",
    "cz": "git-cz"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint",
    "*.json": "prettier --check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-ja"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jsdom": "^16.1.1",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.46",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog-ja": "^0.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "firebase-tools": "^7.16.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.5.0",
    "jsdom": "^16.2.1",
    "moment": "^2.24.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5"
  }
}
